<html>
    <head>
        <link href="/public/assets/styles.css" rel="stylesheet" type="text/css" />
        <link rel="shortcut icon"  type="image/x-icon" href="/public/assets/favicon.ico" />

        <title>TechTarget RSS Site</title>
        <meta charset="UTF-8">
    </head>
    <body>
        <div id="header">
            <a href="/"><img id="logo" src="/public/assets/techtargetlogo.png" alt="logo"></a>
            <h1 id="heading"></h1>
        </div>
        <div id="content">
            <% for(var i = 0; i < itemArr.length; i++) { %>
                <a id="itemLink" href="<%= itemArr[i].link; %>">
                    <%= itemArr[i].title%></a>
                <br>
                <br>
                <p id="dateTime"><%=itemArr[i].pubDate%></p>
                <br>
                <br>
            <%}%>
        </div>

        <script>
            if (window.location.pathname === "/fr") document.getElementById("heading").innerHTML = 'Bienvenue dans notre liste de contenu';
            else if (window.location.pathname === "/de") document.getElementById("heading").innerHTML = 'Willkommen in unserer Inhaltsliste';
            else if (window.location.pathname === "/it") document.getElementById("heading").innerHTML = 'Benvenuto nella nostra lista di contenuti';
            else if (window.location.pathname === "/es") document.getElementById("heading").innerHTML = 'Bienvenido a nuestra lista de contenido';
            else document.getElementById("heading").innerHTML = 'Welcome to Our Content List';
        </script>
    </body>
</html>